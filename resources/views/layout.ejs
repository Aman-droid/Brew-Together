        <div>
            <ul class="flex items-center">
                <li class="ml-6 font-black"><a href="/">Menu</a></li>
                <% if(user) { %>
                    <li class="ml-6 font-black">
                        <form id="logout" action="/logout" method="POST">
                            <a onclick="document.getElementById('logout').submit()" href="#">Logout</a>
                        </form>
                    </li>
                    <% } else { %>
                        <li class="ml-6 font-black"><a href="/register">Register</a></li>
                        <li class="ml-6 font-black"><a href="/login">Login</a></li>
                        <% } %>
                            <li class="ml-6"><a href="/cart"
                                    class="inline-block px-4 py-2 rounded-full flex items-center">
                                    <span id="cartCounter" class="text-white font-bold pr-2">
                                        <%= session.cart ? session.cart.totalQty : '' %>
                                    </span>
                                    <img src="/img/cart.png" alt="">
                                </a></li>
            </ul>
        </div>
    </nav>

