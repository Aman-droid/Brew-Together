<body>
    <!-- NAVBAR  -->
    <nav class="container mx-auto flex items-center justify-between py-4 max-h-0.5">
        <div class="w-1/12 max-h-3">
            <a href="/"><img src="/img/abc.ico" alt="logo" height="10px"> </a>
        </div>
        <div class="flex items-center ml-2 text-4xl font-black " id="BrewTogether">
            <a href="/"></a> Brew-Together </a>
